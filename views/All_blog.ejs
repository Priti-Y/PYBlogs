<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="/styles/main.css">
<body class="d-flex h-100 text-center text-bg-dark bg-blog ">     
    <div class="cover-container w-100 h-100 p-3 mx-auto flex-column">
      <%- include("partials/header.ejs") %>
        <div style="margin-top: 100px;">
        <% items.forEach(item => { %>
          <% if(item['title'] != "") {%>
              <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm text-dark h-md-250">
                <div class="col p-4 d-flex flex-column position-static">
                  <h3 class="mb-0"><%= item['title'] %></h3>
                  <div class="mb-1 text-body-secondary"><%= item['date'] %></div>
                  <p class="card-text mb-auto"><b>Author: </b><%= item['author'] %></p>
                  <a href="/read" >
                    Continue reading
                  </a>
                  <a href="/delete" >
                    <img src="/images/bin.png" height="20">
                  </a>
                </div>
              </div>
              <%}%>

          <% }); %>
        </div>
    </div>
</body>


    